# S3バケット名
s3_bucket_name = "your-bucket-name"

# APIエンドポイント（オプション、デフォルト: https://httpbin.org/put）
api_endpoint = "https://httpbin.org/put"

# VPCとサブネットの設定
vpc_id     = "vpc-xxxxxxxx"
subnet_ids = ["subnet-xxxxxxxx", "subnet-yyyyyyyy"]

# スケジュール式（オプション、デフォルト: rate(5 minutes)）
schedule_expression = "rate(5 minutes)"

# コンテナイメージURI
container_image = "xxxxxxxxxxxx.dkr.ecr.ap-northeast-1.amazonaws.com/json-to-yaml-converter:latest"

# タスクのリソース設定（オプション）
task_cpu    = "256"
task_memory = "512"
